<div class="container">
<h5><span style="background-color: #dcdcdc;">新規会員登録</span></h5>

  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="row form-group">
          <%= f.label :名前（必須）, class: "col-md-4" %>
          <%= f.text_field :last_name, value: "(例)山田",autofocus: true, class: "col-md-4" %>
          <%= f.text_field :first_name, value: "(例)太郎",autofocus: true, class: "col-md-4" %>
        </div>

        <div class="row form-group">
          <%= f.label :カナ（必須）, class: "col-md-4" %>
          <%= f.text_field :last_name_kana, value: "(例)ヤマダ", autofocus: true, class: "col-md-4" %>
          <%= f.text_field :first_name_kana, value: "(例)タロウ", autofocus: true, class: "col-md-4" %>
        </div>

        <div class="row form-group">
          <%= f.label :メールアドレス, class: "col-md-3" %>
          <div class="col-md-1"></div>
          <%= f.email_field :email, autofocus: true, class: "col-md-8" %>
        </div>

        <div class="row form-group">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-md-4" %>
          <%= f.text_field :postal_code, autofocus: true, class: "col-md-8" %>
        </div>

        <div class="row form-group">
          <%= f.label :住所, class: "col-md-3" %>
          <div class="col-md-1"></div>
          <%= f.text_field :address, autofocus: true, class: "col-md-8" %>
        </div>

        <div class="row form-group">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-md-4" %>
          <%= f.text_field :telephone_number, autofocus: true, class: "col-md-8" %>
        </div>

        <div class="row form-group">
          <%= f.label :"パスワード(6文字以上)", class: "col-md-4" %>
          <%= f.password_field :password, autocomplete: "off", class: "col-md-8" %>
        </div>

        <div class="row form-group">
          <%= f.label :"パスワード(確認用)", class: "col-md-4" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-md-8" %>
        </div>

        <div class="text-center">
          <%= f.submit "新規登録" ,class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
